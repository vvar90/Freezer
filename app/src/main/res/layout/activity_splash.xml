<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vvar90.freezer.Activities.SplashActivity">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="45dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="48dp"
        android:text="Welcome to freezer"
        app:layout_constraintBottom_toTopOf="@+id/checkFreezersBtn"
        app:layout_constraintStart_toStartOf="@+id/checkFreezersBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <Button
        android:id="@+id/checkFreezersBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34dp"
        android:text="Check freezers"
        app:layout_constraintBottom_toTopOf="@+id/addFreezerBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText" />

    <Button
        android:id="@+id/addFreezerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="268dp"
        android:layout_marginStart="12dp"
        android:text="Add freezer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/checkFreezersBtn"
        app:layout_constraintTop_toBottomOf="@+id/checkFreezersBtn" />
</android.support.constraint.ConstraintLayout>
